{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@silvenga/resume",
  "private": true,
  "license": "MIT",
  "repository": "git@github.com:Silvenga/resume.silvenga.com",
  "author": "Mark Lopez <m@silvenga.com>",
  "publicUrl": "/resume",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "browserslist": ">0.5%, last 2 versions, Firefox ESR, not dead, not op_mini all",
  "importSort": {
    ".ts,.tsx": {
      "style": "import-sort-style-module-compact",
      "options": {}
    }
  },
  "targets": {
    "default": {
      "distDir": "./dist/resume"
    }
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "staticFiles": [
    {
      "staticPath": "./src/static/robots.txt",
      "staticOutPath": ""
    }
  ],
  "scripts": {
    "parcel:start": "parcel --port 9999 --config .parcelrc src/index.html",
    "parcel:build": "parcel build --config .prod.parcelrc src/index.html --public-url /resume",
    "sri-dist": "posthtml -u posthtml-sri --posthtml-sri.basePath=dist/ dist/**/*.html",
    "lint": "eslint --max-warnings=0 src",
    "start": "nodemon --watch package.json --exec yarn parcel:start",
    "clean": "rimraf ./dist && rimraf ./.parcel-cache",
    "build": "yarn clean && yarn parcel:build && yarn sri-dist",
    "test": "yarn jest",
    "test:watch": "yarn jest --watchAll"
  },
  "devDependencies": {
    "@anatine/zod-mock": "^3.13.4",
    "@eslint/js": "^9.6.0",
    "@faker-js/faker": "^8.4.1",
    "@parcel/optimizer-data-url": "2.12.0",
    "@parcel/packager-raw-url": "2.12.0",
    "@parcel/packager-xml": "2.12.0",
    "@parcel/reporter-bundle-analyzer": "2.12.0",
    "@parcel/transformer-inline-string": "2.12.0",
    "@parcel/transformer-webmanifest": "2.12.0",
    "@parcel/transformer-xml": "2.12.0",
    "@parcel/transformer-yaml": "^2.12.0",
    "@stylistic/eslint-plugin": "^2.6.0-beta.0",
    "@tailwindcss/typography": "^0.5.13",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.14.9",
    "@types/parcel-env": "^0.0.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "eslint": "^9.6.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.34.3",
    "jest": "^29.7.0",
    "jest-transform-yaml": "^1.1.2",
    "nodemon": "^3.1.4",
    "parcel": "2.12.0",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "parcel-resolver-ignore": "^2.2.0",
    "postcss": "^8.4.39",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-doctype": "^1.1.1",
    "posthtml-external-link": "^0.1.2",
    "posthtml-sri": "^1.2.1",
    "process": "^0.11.10",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "8.0.0-alpha.39"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.18",
    "@react-pdf/renderer": "^3.4.4",
    "luxon": "^3.4.4",
    "markdown-it": "^14.1.0",
    "pdfjs-dist": "^4.4.168",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-pdf": "^9.1.0",
    "zod": "^3.23.8"
  }
}
